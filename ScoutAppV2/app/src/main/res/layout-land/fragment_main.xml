<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="@drawable/bg">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BouttonHistory"
        android:id="@+id/buttonHistory"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="#fffef5"
        android:textSize="28dp"
        android:elegantTextHeight="true"
        android:layout_below="@+id/section_label"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/section_label"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BouttonEnfants"
        android:id="@+id/buttonChildren"
        android:textColor="#ffffff"
        android:textSize="28dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/buttonHistory"
        android:layout_toRightOf="@+id/section_label"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/buttonHistory"
        android:layout_alignEnd="@+id/buttonHistory" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/scouts"
        android:layout_toRightOf="@+id/buttonChildren"
        android:layout_toEndOf="@+id/buttonChildren"
        android:layout_alignParentTop="true" />


</RelativeLayout>
